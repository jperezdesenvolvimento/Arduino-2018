#define motor 3 // Define um motor ligado através das porta 3
void setup() {
  Serial.begin(9600);//INICIAL SAIDA/ENTRADA SERIAL A 9600BPS (bits por segundo)
  pinMode(motor, OUTPUT); // SETA A PORTA DO MOTOR
}

void loop() {
  int aux = map(analogRead(A0),0,1023,0,255); // INICIA A LEITURA DO POTÊNCIOMETRO
  Serial.println(aux);//PRINTA NA TELA SERIAL O VALOR DE LEITURA DO POTÊNCIOMETRO
  analogWrite(motor,aux);//ESCREVE NA PORTA ANALOGICA O MOTOR QUE VAI RECEBER O SINAL DO AUX QUE É O POTÊNCIOMETRO
}

//LIGAÇÃO POTÊNCIOMETRO
// POTÊNCIOMETRO LIGADO A PLACA /VERMELHO 5V/PRETO GND/CENTRAL LIGADO NA PORTA ANALOGICA, NESTE CASO A0

//LIGAÇÃO
//SAINDO DA PORTA 3 LIGAR 1 JUMPER NA PERNA DOURADA DE UM RESISTOR Verm/Verm/Verm/Dour
//A OUTRA PERNA DO RESISTOR É LIGADO NA PERNA CENTRAL DO TRANSISTOR VIRADO COM A CHAPA PARA FRENTE
//AINDA COM A CHAPA VIRADA PARA FRENTE, A PERNA DIREITA DO TRANSISTOR É LIGADA NO NEUTRO/GND DA FONTE 12V
//FALANDO DE 12V CRIE UM CANAL POSITIVO PARA LIGAR AS OUTRAS COISAS QUE PRECISAREMOS NELE
//A PERNA ESQUERDA DO TRANSISTOR AINDA CHAPADO DE FRENTE PARA VOCÊ, É LIGADA EM UMA DAS PONTAS DO MOTOR
//A PONTA QUE SOBROU DO MOTOR É LIGADA DIRETAMENTE NO CANAL POSITIVO DE FONTE 12V
